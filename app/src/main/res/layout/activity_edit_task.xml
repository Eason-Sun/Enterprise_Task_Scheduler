<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTask">

    <ImageView
        android:id="@+id/taskLevelEditArrow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:contentDescription="@string/emp_dept_selector"
        android:onClick="levelOnClick"
        android:padding="5sp"
        android:src="@mipmap/baseline_arrow_drop_down_black_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/empLevelEdit"
        app:layout_constraintEnd_toEndOf="@+id/empEmailInput"
        app:layout_constraintStart_toEndOf="@+id/taskLevelEdit"
        app:layout_constraintTop_toTopOf="@+id/taskLevelEdit" />

    <ImageView
        android:id="@+id/taskDeptNameEditArrow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:contentDescription="@string/emp_dept_selector"
        android:onClick="deptOnClick"
        android:padding="5sp"
        android:src="@mipmap/baseline_arrow_drop_down_black_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/empLevelEdit"
        app:layout_constraintEnd_toEndOf="@+id/empEmailInput"
        app:layout_constraintStart_toEndOf="@+id/taskDeptNameEdit"
        app:layout_constraintTop_toTopOf="@+id/taskDeptNameEdit" />

    <ImageView
        android:id="@+id/taskStartDateEditArrow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:contentDescription="@string/emp_dept_selector"
        android:onClick="startDateOnClick"
        android:padding="5sp"
        android:src="@mipmap/baseline_arrow_drop_down_black_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/empLevelEdit"
        app:layout_constraintEnd_toEndOf="@+id/empEmailInput"
        app:layout_constraintStart_toEndOf="@+id/taskStartDateEdit"
        app:layout_constraintTop_toTopOf="@+id/taskStartDateEdit" />

    <ImageView
        android:id="@+id/taskEndDateEditArrow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:contentDescription="@string/emp_dept_selector"
        android:onClick="endDateOnClick"
        android:padding="5sp"
        android:src="@mipmap/baseline_arrow_drop_down_black_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/empLevelEdit"
        app:layout_constraintEnd_toEndOf="@+id/empEmailInput"
        app:layout_constraintStart_toEndOf="@+id/taskEndDateEdit"
        app:layout_constraintTop_toTopOf="@+id/taskEndDateEdit" />

    <ImageView
        android:id="@+id/taskStatusEditArrow2"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:contentDescription="@string/emp_dept_selector"
        android:onClick="statusOnClick"
        android:padding="5sp"
        android:src="@mipmap/baseline_arrow_drop_down_black_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/empLevelEdit"
        app:layout_constraintEnd_toEndOf="@+id/empEmailInput"
        app:layout_constraintStart_toEndOf="@+id/taskStatusEdit"
        app:layout_constraintTop_toTopOf="@+id/taskStatusEdit" />

    <EditText
        android:id="@+id/taskDetailDescriptionEdit"
        android:layout_width="200sp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/taskDetailEndDateText"
        app:layout_constraintStart_toStartOf="@+id/taskEndDateEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskEndDateEdit" />

    <TextView
        android:id="@+id/taskStartDateEdit"
        android:layout_width="160sp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/taskStatusEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskStatusEdit"
        app:layout_constraintVertical_bias="0.39" />

    <EditText
        android:id="@+id/taskEndDateEdit"
        android:layout_width="160sp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/end_date"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/taskStartDateEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskStartDateEdit"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/taskIDEdit"
        android:layout_width="200sp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/id" />

    <EditText
        android:id="@+id/taskNameEdit"
        android:layout_width="200sp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/taskIDEdit"
        app:layout_constraintStart_toStartOf="@+id/taskIDEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskIDEdit"
        tools:text="@string/task_name" />

    <AutoCompleteTextView
        android:id="@+id/taskLevelEdit"
        android:layout_width="160sp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/taskNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskNameEdit" />

    <AutoCompleteTextView
        android:id="@+id/taskDeptNameEdit"
        android:layout_width="160sp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/taskLevelEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskLevelEdit" />

    <AutoCompleteTextView
        android:id="@+id/taskEmpNameEdit"
        android:layout_width="200sp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/taskDeptNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskDeptNameEdit"
        app:layout_constraintVertical_bias="0.39" />

    <AutoCompleteTextView
        android:id="@+id/taskStatusEdit"
        android:layout_width="160sp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/taskEmpNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/taskEmpNameEdit"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView23"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toTopOf="@+id/taskLevelEdit" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView29"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        app:layout_constraintTop_toTopOf="@+id/taskDetailDescriptionEdit" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_date"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView28"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="@+id/taskEndDateEdit" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView27"
        app:layout_constraintStart_toStartOf="@+id/textView27"
        app:layout_constraintTop_toTopOf="@+id/taskStartDateEdit" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_status"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView26"
        app:layout_constraintStart_toStartOf="@+id/textView26"
        app:layout_constraintTop_toTopOf="@+id/taskStatusEdit" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/employee_name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView25"
        app:layout_constraintStart_toStartOf="@+id/textView25"
        app:layout_constraintTop_toTopOf="@+id/taskEmpNameEdit" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/department"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView21"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/taskDeptNameEdit" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView22"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toTopOf="@+id/taskNameEdit" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="@string/id"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/taskIDEdit"
        app:layout_constraintEnd_toStartOf="@+id/taskIDEdit"
        app:layout_constraintTop_toTopOf="@+id/taskIDEdit" />

    <Button
        android:id="@+id/taskEditApplyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:onClick="editOnClick"
        android:text="@string/apply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDetailDescriptionEdit" />

    <Button
        android:id="@+id/empEditCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:onClick="cancelOnClick"
        android:text="@string/cancel"
        app:layout_constraintStart_toEndOf="@+id/taskEditApplyButton"
        app:layout_constraintTop_toTopOf="@+id/taskEditApplyButton" />

</androidx.constraintlayout.widget.ConstraintLayout>